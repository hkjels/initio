
// Forms

form
  margin-bottom: base-space

  .group
    label
      float: left
      padding-top: 9px
      text-align: right
      width: 140px
    .controls
      margin-left: 160px

legend
  display: block
  margin-bottom: base-line-height
  width: 100%

fieldset
  margin-bottom: base-line-height

input
  padding: (base-space/2)

input[type=text]
  background: rgba(black, 0.15)
  border: none
  border-radius: base-radius
  box-shadow: inset 0 1px 3px rgba(black, 0.3)
  outline: none
  transition: box-shadow, background .2s linear
  &.idle
    background: rgba(white, 0.7)
  &:focus
    background: rgba(white, 0.9)
    box-shadow: inset 0 1px 0 rgba(white, 0.8), 0 0 5px identity
  &:not([placeholder])
    margin: (base-space/2) 0 (base-space/2) base-space

input[type=password]
  @extends input[type=text]

input[type=email]
  @extends input[type=text]

input[type=tel]
  @extends input[type=text]

