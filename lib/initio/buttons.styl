
// Buttons

buttonColor(color)
  background: color linear-gradient(top, color, darken(color, 20))
  &:active
    background: color linear-gradient(top, darken(color, 30), color)

button
  buttonColor(buttonbg)
  border-radius: base-radius
  box-shadow: 0 2px 2px rgba(black, 0.3), inset 0 1px 0 rgba(white, 0.6)
  border: none
  cursor: pointer
  display: inline-block
  padding: (base-space/2) base-space
  position: relative
  text-shadow: 0 1px 0 rgba(white, 0.2)
  &:active
    box-shadow: inset 0 0 1px rgba(black, 0.6), inset 0 1px 2px rgba(black, 0.3), inset 0 1px 5px rgba(black, 0.6), 0 1px 0 rgba(black, 0.3), 0 2px 0 rgba(white, 0.1)

.button
  @extends button

input[type='button']
  @extends button

input[type='submit']
  @extends button

input[type='reset']
  @extends button

